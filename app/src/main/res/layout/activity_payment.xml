<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    tools:context=".payment_activity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_b1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembayaran"
        android:textSize="30dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Bank BCA (Dicek Otomatis)                    "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginLeft="308dp"
        android:layout_marginTop="198dp"
        android:src="@drawable/ic_bca" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nomor Order                                             "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginLeft="308dp"
        android:layout_marginTop="295dp"
        android:src="@drawable/ic_salin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nomor Virtual Account                           "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginLeft="308dp"
        android:layout_marginTop="345dp"
        android:src="@drawable/ic_salin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Total Pembayaran                                   "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="PENTING! Lakukan pembayaran sebelum 30 Mei 2022 pukul 12.00 atau pesanan Anda otomatis dibatalkan oleh sistem"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginTop="470dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_selanjutnya"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:id="@+id/btn_b2"
        />








</RelativeLayout>