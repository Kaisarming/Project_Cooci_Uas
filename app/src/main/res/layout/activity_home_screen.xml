<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_screen"
    tools:context=".home_screen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop="20dp"
        android:text="Hallo, Customer!"
        android:textSize="30dp"
        android:textColor="@color/white"
        ></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="25dp"
        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:textSize="18dp"
        android:id="@+id/txt_home"
        ></TextView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/car_image"
        android:id="@+id/btn_mobil"
        ></ImageButton>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_mobil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/motorcycle_image"
        android:id="@+id/btn_motorcycle"
        ></ImageButton>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_botHome"
        android:layout_below="@id/btn_motorcycle"
        ></ImageView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/Beranda"
        android:layout_below="@id/btn_motorcycle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/btn_home"
        ></ImageButton>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/History"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_motorcycle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/btn_history"
        ></ImageButton>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/Setting"
        android:layout_below="@id/btn_motorcycle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="270dp"
        android:id="@+id/btn_setting"
        ></ImageButton>

</RelativeLayout>