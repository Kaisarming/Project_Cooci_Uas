<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile"
    tools:context=".password">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        ></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:text="Kebijakan dan Keamanan"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="70dp"
        android:text="Edit Password"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/text_editpasswordScreem"
        ></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_editpasswordScreem"
        android:background="@drawable/box_profile"
        android:layout_centerHorizontal="true"
        android:hint="Masukkan password baru anda"
        android:textSize="15dp"
        android:id="@+id/box_editpasswordScreen"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box_editpasswordScreen"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Konfirmasi Password"
        android:id="@+id/text_konfirmpasswordScreen"
        ></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_konfirmpasswordScreen"
        android:background="@drawable/box_profile"
        android:layout_centerHorizontal="true"
        android:hint="Masukkan lagi password baru anda"
        android:textSize="15dp"
        android:id="@+id/box_konfirmpasswordScreen"
        ></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/box_konfirmpasswordScreen"
        android:background="@drawable/bg_masuk"
        android:text="Simpan"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="10dp"
        ></Button>

</RelativeLayout>