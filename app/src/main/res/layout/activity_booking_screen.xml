<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    tools:context=".booking_screen">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_back2"
        ></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan pilih jenis layanan yang anda butuhkan"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/txt_penjelasanBooking"
        android:textSize="20dp"
        ></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cuci"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/btnunk_cuci"
        ></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cuciVakum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:id="@+id/btnunk_cucivakum"
        ></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vakum"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="295dp"
        android:id="@+id/btnunk_vakum"
        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Tanggal"
        android:textStyle="bold"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="45dp"
        android:id="@+id/txt_pilihTanggal"
        ></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_pilihTanggal"
        android:layout_marginLeft="45dp"
        android:background="@drawable/horizontal_line"
        android:drawableRight="@drawable/vertikal_row"
        android:hint="dd/mm/yyyy"
        android:id="@+id/et_pilihanTanggal"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pilihanTanggal"
        android:text="Pilih Jam"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:id="@+id/txt_pilihjam"
        ></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_pilihjam"
        android:layout_marginLeft="45dp"
        android:background="@drawable/horizontal_line"
        android:drawableRight="@drawable/vertikal_row"
        android:hint="00.00"
        android:id="@+id/et_jam"
        ></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_jam"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_next2"
        android:text="Selanjutnya"
        android:layout_centerHorizontal="true"
        ></Button>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_botHome"
        ></ImageView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/Beranda"
        android:layout_below="@id/btn_next2"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="60dp"
        ></ImageButton>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/History"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_next2"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        ></ImageButton>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/Setting"
        android:layout_below="@id/btn_next2"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="270dp"
        ></ImageButton>

</RelativeLayout>