<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pengaturan"
    tools:context=".activity_pengaturan">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_b1"
        ></ImageButton>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:text="Pengaturan"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_______________________________________________________"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="170dp"
        android:textColor="#000000"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kebijakan dan Keamanan"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="190dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_______________________________________________________"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="210dp"
        android:textColor="#000000"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentang"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="230dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_______________________________________________________"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:textColor="#000000"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="270dp"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_______________________________________________________"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="290dp"
        android:textColor="#000000"
        ></TextView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_p"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="125dp"
        android:id="@+id/btn_b2"
        ></ImageButton>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_kebijakan_p"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="178dp"
        android:id="@+id/btn_b3"
        ></ImageButton>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="223dp"
        android:src="@drawable/ic_tentang_p"
        android:id="@+id/btn_b4"
        ></ImageButton>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="262dp"
        android:src="@drawable/ic_logout_p"
        android:id="@+id/btn_b5"
        ></ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="350dp"
        android:textSize="18sp"
        ></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_rating"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        ></ImageView>

    <EditText
        android:layout_width="330dp"
        android:layout_height="125dp"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:hint="Tuliskan saran dan Kritik Anda"
        ></EditText>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/Beranda"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/btn_home"
        ></ImageButton>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/History"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/btn_history"
        ></ImageButton>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/Setting"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="270dp"
        android:id="@+id/btn_setting"
        ></ImageButton>


</RelativeLayout>